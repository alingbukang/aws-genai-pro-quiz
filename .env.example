# Example environment configuration
# Copy to .env and fill in your values

# =============================================================================
# AI PROVIDER SELECTION
# =============================================================================
# Options: azure, openai, aws, anthropic
AI_PROVIDER=azure

# =============================================================================
# AZURE OPENAI CONFIGURATION
# =============================================================================
AZURE_OPENAI_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_GENERATOR_MODEL=gpt-4o
AZURE_CRITIC_MODEL=gpt-4o

# =============================================================================
# OPENAI CONFIGURATION (Direct API)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_GENERATOR_MODEL=gpt-4o
OPENAI_CRITIC_MODEL=gpt-4o
OPENAI_ORG_ID=your-org-id-here  # Optional

# =============================================================================
# AWS BEDROCK CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1
AWS_GENERATOR_MODEL=anthropic.claude-3-sonnet-20240229-v1:0
AWS_CRITIC_MODEL=anthropic.claude-3-sonnet-20240229-v1:0
# Alternative AWS models:
# - amazon.titan-text-premier-v1:0
# - meta.llama3-70b-instruct-v1:0
# - anthropic.claude-3-haiku-20240307-v1:0

# =============================================================================
# ANTHROPIC CONFIGURATION (Direct API)
# =============================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_GENERATOR_MODEL=claude-3-sonnet-20240229
ANTHROPIC_CRITIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# GOOGLE VERTEX AI / GEMINI CONFIGURATION
# =============================================================================
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_REGION=us-central1
GOOGLE_GENERATOR_MODEL=gemini-1.5-pro
GOOGLE_CRITIC_MODEL=gemini-1.5-pro
